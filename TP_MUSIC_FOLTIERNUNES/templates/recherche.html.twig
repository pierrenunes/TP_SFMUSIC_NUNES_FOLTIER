{% extends 'accueil.html.twig' %}

{% block style %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/axentix@0.5.3/dist/css/axentix.min.css">
<link rel="stylesheet" href="../../css/_bootswatch.scss">
<link rel="stylesheet" href="../../css/_variables.scss">
<link rel="stylesheet" href="../../css/boostrap.css">
<link rel="stylesheet" href="../../css/bootstrap.min.css">
<link rel="stylesheet" href="../../css/accueil.css">
<link href="../../css/recherche.css" rel="stylesheet" />
{% endblock %}

{% block title %}
SpotWify
{% endblock %}


{% block content %}
<div class="s003">
  <form>
    <div class="inner-form">
      <div class="input-field first-wrap">
        <div class="input-select">
          <select data-trigger="" name="choices-single-defaul">
            <option placeholder="">Artiste</option>
            <option>Genre</option>
            <option>Annee</option>
          </select>
        </div>
      </div>
      <div class="input-field second-wrap">
        <form role="form" method="post" action="{{ path('recherche', {'verif':'+'}) }}">
          <input type="textfield" name="keyword_search" class="form-control" id="search" placeholder="Une idÃ©e ?">
        </form>
      </div>
      <div class="input-field third-wrap">
        <button class="btn-search" type="submit" name="btn_search">
          <svg class="svg-inline--fa fa-search fa-w-16" aria-hidden="true" data-prefix="fas" data-icon="search" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
            <path fill="currentColor" d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z"></path>
          </svg>
        </button>
      </div>
    </div>
  </form>
</div>
{% for elem in res %}
<li class="deroulant list-group-item d-flex justify-content-between align-content-center">
    <a href="#">
        <img class="m-2" src="../../{{ elem.url }}" alt="" style="height: 20vh;width: 15vw;border-radius:10px; border: 5px solid #ff6ec7; box-shadow: 0 0 10px #ff6ec7;">
    </a>
    <ul class="sous" id="info">
        <li><a href="#">Titre :{{ elem.titrealbum }}</a></li>
        {% for art in elem.getMusiques() %}
        <li><a href="#">Artiste : {{ art.getArtiste() }} </a></li>
        {% endfor %}
        <li><a href="#">Date :{{ elem.Date.format('d/m/Y') }} </a></li>
    </ul>
</li>
{% endfor %}
<script src="../../js/extention/choices.js"></script>
<script>
  const choices = new Choices('[data-trigger]',
  {
    searchEnabled: false,
    itemSelectText: '',
  });

</script>
{% endblock %}