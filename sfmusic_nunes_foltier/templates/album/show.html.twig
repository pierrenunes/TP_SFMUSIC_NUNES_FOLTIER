{% block title %}Album{% endblock %}

{% block body %}
    <h1>Album</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ album.nom }}</td>
            </tr>
            <tr>
                <th>Pochette</th>
